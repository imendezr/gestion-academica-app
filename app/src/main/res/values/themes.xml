<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.GestionAcademicaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorSurface</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorSurface</item>

        <!-- Error color -->
        <item name="colorError">@color/colorError</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>

        <!-- Status bar integration -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- No ActionBar -->
    <style name="Theme.GestionAcademicaApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Overlay for AppBar -->
    <style name="Theme.GestionAcademicaApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Overlay for popup menus -->
    <style name="Theme.GestionAcademicaApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Login-specific theme with transparent status bar -->
    <style name="Theme.GestionAcademicaApp.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item> <!-- o true si fondo claro -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorSurface</item>
    </style>
</resources>
