<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <!-- Buscador -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewProfesores"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="6dp"
        android:background="@drawable/bg_searchview_rounded"
        android:elevation="2dp"
        android:queryHint="Buscar profesores"
        android:iconifiedByDefault="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" />
    <!-- Contenedor para lista + ProgressBar superpuesto -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp">

        <!-- Lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProfesores"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:contentDescription="Listado de profesores"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <!-- ProgressBar centrado y superpuesto -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:contentDescription="Cargando profesores" />
    </FrameLayout>

    <!-- BotÃ³n flotante -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabProfesores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Agregar"
        android:textSize="16sp"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="6dp"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:icon="@drawable/ic_add"
        app:iconPadding="12dp"
        app:iconGravity="textStart"
        app:cornerRadius="28dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>